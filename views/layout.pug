doctype html
html
    head
        // Set title and import necessary stylesheets and scripts
        title ESN Heidelberg Member Portal
        // Bootstrap CSS
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css", integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9", crossorigin="anonymous")
        // Font Awesome
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6/css/fontawesome.min.css", crossorigin="anonymous")
        // Custom CSS
        link(rel="stylesheet", href="/stylesheets/style.css")

        link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css", rel="stylesheet")

        link(rel="icon", href="/images/favicon.png")

    body
        nav.navbar.navbar-expand-md.bg-body.py-3.navbar-border
            .container
                a.navbar-brand.d-flex.align-items-center(href="/home")
                    span ESN Heidelberg Member Portal
                if signedIn
                    button.navbar-toggler(data-bs-toggle="collapse", data-bs-target="#navcol-3")
                        span.visually-hidden Toggle navigation
                        span.navbar-toggler-icon
                .collapse.navbar-collapse#navcol-3
                    ul.navbar-nav.mx-auto
                    if signedIn
                        form(action="/logout", method="POST")
                            input(type='hidden', name='_csrf', value=csrfToken)
                            button.btn.btn-primary.logout-button(type="submit") Logout

        // Blank content block to be filled by individual pages
        block content
        // Popper.js
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2/dist/umd/popper.min.js", integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r", crossorigin="anonymous")
        // Bootstrap's JavaScript
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.min.js", integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa", crossorigin="anonymous")

        //- Footer
        footer.text-center.py-4
            hr
            .container
                .row
                    .col(style="text-align: left;")
                        p.text-muted.my-2 Â© #{new Date().getFullYear()} Erasmus Student Network Heidelberg e.V.
                    .col.text-end
                        ul.list-inline.my-2
                            li.list-inline-item
                                a.link-secondary(href="https://esn-heidelberg.de/satellite4/aboutus/legal_info") Imprint
                            li.list-inline-item(style="color: rgba(108,117,125);") Version: #{process.env.APP_VERSION}
                            li.list-inline-item
                                a(href="https://github.com/fabsau/ESNHDMember")
                                    img(src="/images/github.svg", alt="GitHub")